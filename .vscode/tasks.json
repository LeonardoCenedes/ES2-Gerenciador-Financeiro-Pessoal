{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "maven: compile",
            "type": "shell",
            "command": "mvn",
            "args": ["compile"],
            "options": {
                "cwd": "${workspaceFolder}/Codigo/gerenciador-financeiro"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        },
        {
            "label": "maven: exec",
            "type": "shell",
            "command": "mvn",
            "args": ["compile", "exec:java"],
            "options": {
                "cwd": "${workspaceFolder}/Codigo/gerenciador-financeiro"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "isBackground": false
        },
        {
            "label": "maven: debug",
            "type": "shell",
            "command": "mvn",
            "args": [
                "clean",
                "compile",
                "javafx:run@debug"
            ],
            "options": {
                "cwd": "${workspaceFolder}/Codigo/gerenciador-financeiro"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "dedicated"
            },
            "problemMatcher": [],
            "isBackground": true
        },
        {
            "label": "maven: clean install",
            "type": "shell",
            "command": "mvn",
            "args": ["clean", "install"],
            "options": {
                "cwd": "${workspaceFolder}/Codigo/gerenciador-financeiro"
            },
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}
